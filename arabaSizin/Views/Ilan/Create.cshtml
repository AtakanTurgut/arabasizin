                    @Html.LabelFor(model => model.ilanNo, "İlan No", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.ilanNo, new { htmlAttributes = new { @class = "form-control" } })
