                <div class="row mb-3" style="text-align: center">
                    @Html.LabelFor(model => model.modelYili, "Model Yılı", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.modelYili, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.modelYili, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row mb-3" style="text-align: center">
                    @Html.LabelFor(model => model.yakitTuru, "Yakıt Türü", htmlAttributes: new { @class = "control-label col-md-2" })
