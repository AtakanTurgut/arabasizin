@model IEnumerable<arabaSizin.Models.Ilan>
@{
    ViewBag.Title = "IlanListesi";
}

<div class="container">
    <br />

    <div class="row">
        <div class="col-md-12">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
                    <li class="breadcrumb-item active" aria-current="page">İlan Listesi</li>
                </ol>
            </nav>
            <div class="img-thumbnail">
                <br />

                <table class="table">
                    <tr>
                        <th>
                            Kullanıcı Adı
                        </th>
                        <th>
                            Marka
                        </th>
                        <th>
                            Model
                        </th>
                        <th>
                            Durum
                        </th>
                        <th>
                            Şehir
                        </th>
                        <th>
                            Fiyat
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <label class="btn btn-primary">@item.userName</label>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Model.Marka.markaAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Model.modelAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Durum.durumAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sehir.sehirAd)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fiyat)
                            </td>
                            <td>
                                <a class="btn btn-outline-danger" href="/Ilan/Delete/@item.ilanId"><i class="bi bi-trash"></i> Sil</a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
