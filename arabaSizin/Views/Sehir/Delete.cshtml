@model arabaSizin.Models.Sehir

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <br />

    <div class="row">
        <div class="col-md-3">
            <br />
            <!--Filtreleme Kısmı-->
            @Html.Action("PartialFilter", "Home")
        </div>

        <div class="col-md-9">

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Şehir Silme</li>
                </ol>
            </nav>
            <div class="img-thumbnail">
                <br />

                <h3>Bu kaydı silmek istediğinizden emin misiniz?</h3>
                <div>

                    <dl class="dl-horizontal">
                        <dt>
                            Şehir
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sehirAd)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Sil" class="btn btn-outline-danger" /> |
                            @Html.ActionLink("Şehir Listesi", "Index", null, new { @class = "btn btn-outline-warning" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>